<div class="flex min-h-full flex-col justify-center px-6 lg:px-8 mx-auto">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'space-y-6') do |f| %>
      <div class='my-2'>
        <%= f.label :email, class: 'text-sm font-medium leading-6 text-gray-900'%><br />
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", requisky: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: 'block text-sm font-medium leading-6 text-gray-900' %>
          <div class="text-sm">
            <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'font-semibold text-sky-600 hover:text-sky-500' %>
          </div>
        </div>
        <div class="my-2">
          <%= f.password_field :password, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'rounded-sm border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions my-2">
        <%= f.submit "Log in", class: 'cursor-pointer flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600"' %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>

